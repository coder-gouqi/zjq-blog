<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper
        PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
        "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.cuit.zjq.mapper.CommentMapper">

    <resultMap id="BaseResultMap" type="com.cuit.zjq.model.domain.Comment">
        <id property="id" column="id" jdbcType="VARCHAR"/>
        <result property="essayId" column="essay_id" jdbcType="VARCHAR"/>
        <result property="userId" column="user_id" jdbcType="VARCHAR"/>
        <result property="content" column="content" jdbcType="VARCHAR"/>
        <result property="replyTo" column="reply_to" jdbcType="VARCHAR"/>
        <result property="isDelete" column="is_delete" jdbcType="TINYINT"/>
    </resultMap>

    <sql id="Base_Column_List">
        id
        ,essay_id,user_id,
        content,reply_to,is_delete
    </sql>

    <insert id="insert" parameterType="object">
        insert into comment (id, essay_id, user_id, content, reply_to, is_delete)
        values (#{id}, #{essayId}, #{userId}, #{content}, #{replyTo}, #{isDelete})
    </insert>

    <select id="select" resultType="com.cuit.zjq.model.domain.Comment">
        select *
        from comment
        where is_delete=0
        <if test="essayId != null and essayId!=''">
            and essay_id=#{essayId}
        </if>
        <if test="userId != null and userId!=''">
            and user_id=#{userId}
        </if>
        <if test="replyTo != null and replyTo!=''">
            and reply_to=#{replyTo}
        </if>
    </select>

    <select id="selectById" resultType="com.cuit.zjq.model.domain.Comment">
        select *
        from comment
        where is_delete = 0
          and id = #{id}
    </select>

    <update id="updateById">
        update comment
        set essay_id  = #{essayId},
            user_id   = #{userId},
            content   = #{content},
            reply_to  = #{replyTo},
            is_delete = #{isDelete}
        where id = #{id}
    </update>

    <delete id="deleteById" parameterType="object">
        update comment
        set is_delete = 1
        where id = #{id}
    </delete>
</mapper>
