<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper
        PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
        "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.cuit.zjq.mapper.FavourMapper">

    <resultMap id="BaseResultMap" type="com.cuit.zjq.model.domain.Favour">
        <id property="id" column="id" jdbcType="VARCHAR"/>
        <result property="essayId" column="essay_id" jdbcType="VARCHAR"/>
        <result property="userId" column="user_id" jdbcType="VARCHAR"/>
    </resultMap>

    <sql id="Base_Column_List">
        id
        ,essay_id,user_id
    </sql>

    <insert id="insert" parameterType="object">
        insert into favour (id, essay_id, user_id)
        values (#{id}, #{essayId}, #{userId})
    </insert>

    <select id="select" resultType="com.cuit.zjq.model.domain.Favour">
        select *
        from favour
        where
        <if test="essayId != null and essayId!=''">
            essay_id=#{essayId}
        </if>
    </select>

    <delete id="delete" parameterType="object">
        delete from favour where essay_id=#{essayId} and user_id=#{userId}
    </delete>

</mapper>
